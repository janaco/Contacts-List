<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp">

        <ImageView
            android:id="@+id/action_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/hangouts"
            android:visibility="gone" />


        <TextView
            android:id="@+id/main_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_toLeftOf="@+id/action_icon"
            android:layout_toStartOf="@+id/action_icon"
            android:textColor="@color/blue_grey_800"
            android:textSize="16sp"
            tools:text="+380665684759" />

        <TextView
            android:id="@+id/sub_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/main_text"
            android:layout_alignLeft="@+id/main_text"
            android:layout_alignRight="@+id/main_text"
            android:layout_alignStart="@+id/main_text"
            android:layout_below="@+id/main_text"
            android:textColor="@color/blue_grey_400"
            android:textSize="12sp"
            tools:text="Mobile" />
    </RelativeLayout>
</LinearLayout>